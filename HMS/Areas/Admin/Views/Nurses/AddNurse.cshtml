@model HMS.Models.ViewModels.AdminViewModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New Nurse";

    if (Model.Nurses.Id != 0)
    {
        ViewData["Title"] = "Update Nurse";
    }
    else
    {
        ViewData["Title"] = "Add New Nurse";
    }
}

<form method="post" asp-action="AddNurse" enctype="multipart/form-data" class="cus-border bg-light rounded">
    <div class="row col-12">
        <div class="col-9">

            @if (Model.Nurses.Id != 0)
            {
                <input type="hidden" asp-for="@Model.Nurses.Id" />
                title = "Update Nurse";
            }

            <div class="row justify-content-center">
                <h3 class="pt-2">@title</h3>
            </div>
            <hr class="w-75" />

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Nurses.Name"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.Nurses.Name" class="form-control" />
                    <span asp-validation-for="@Model.Nurses.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Nurses.Gender"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.Nurses.Gender" class="form-control" />
                    <span asp-validation-for="@Model.Nurses.Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Nurses.ImageUrl"></label>
                </div>
                <div class="col-7">
                    <input type="file" name="files" id="uploadBox" class="form-control" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Nurses.Mobile"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.Nurses.Mobile" class="form-control" />
                    <span asp-validation-for="@Model.Nurses.Mobile" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Nurses.Position"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.Nurses.Position" class="form-control" />
                    <span asp-validation-for="@Model.Nurses.Position" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Nurses.Registered"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.Nurses.Registered" class="form-control" />
                    <span asp-validation-for="@Model.Nurses.Registered" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">

                @if (Model.Nurses.Id != 0)
                {
                    <div class="col-3">
                        <button type="submit" asp-route-Id="@Model.Nurses.Id" onclick="return validateInput()" class="btn btn-primary form-control text-white">Update</button>
                    </div>
                    <div class="col-3">
                        <a asp-action="Index" class="btn btn-secondary text-white form-control">Back to List</a>
                    </div>
                }
                else
                {
                    <div class="col-3">
                        <button type="submit" class="btn btn-primary form-control text-white">Create</button>
                    </div>
                    <div class="col-3">
                        <a asp-action="Index" class="btn btn-secondary text-white form-control">Back to List</a>
                    </div>
                }

            </div>

        </div>
        <div class="col-3">

            @if (Model.Nurses.Id != 0)
            {
                <br />
                <img src="@Model.Nurses.ImageUrl" class="img-thumbnail" />
            }

        </div>
    </div>
</form>

@section Scripts{
    <script>
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Please Select an Image!", "error")
                return false;
            }
            else {
                return true;
            }
        }
    </script>
    <style>
        .cus-border {
            border: 2px solid #004481;
        }

        hr {
            border-color: black;
        }

        label {
            font-weight: 500;
        }

        input[type=text] {
            border-color: #0094ff;
        }

        input[type=file] {
            border-color: #0094ff;
        }

        input[type=checkbox] {
            border-color: #0094ff;
        }
    </style>
}