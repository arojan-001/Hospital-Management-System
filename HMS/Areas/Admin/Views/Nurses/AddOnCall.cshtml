@model HMS.Models.ViewModels.AdminViewModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New On Call";

    if (Model.OnCall.Id != 0)
    {
        ViewData["Title"] = "Update On Call";
    }
    else
    {
        ViewData["Title"] = "Add New On Call";
    }
}

<div class="container">
    <div class="col-6 m-0 m-auto cus-border rounded bg-light">
        <form method="post" asp-action="AddOnCall" class="col-12">

            @if (Model.OnCall.Id != 0)
            {
                <input type="hidden" asp-for="@Model.OnCall.Id" />
                title = "Update On Call";
            }

            <div class="row justify-content-center">
                <h3 class="pt-2">@title</h3>
            </div>
            <hr class="w-75" />

            <div class="row form-group">
                <div class="col-3">
                    <label>Room No</label>
                </div>
                <div class="col-9">
                    @Html.DropDownListFor(i => i.OnCall.RoomId, Model.RoomsList, "Select Room No.", new { @class="form-control", @style="border-color:#0094ff" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label>Nurse Name</label>
                </div>
                <div class="col-9">
                    @Html.DropDownListFor(i => i.OnCall.NurseId, Model.NursesList, "Select Nurse Name", new { @class = "form-control", @style = "border-color:#0094ff" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.OnCall.STime"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.OnCall.STime" class="form-control" />
                    <span asp-validation-for="@Model.OnCall.STime" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.OnCall.ETime"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.OnCall.ETime" class="form-control" />
                    <span asp-validation-for="@Model.OnCall.ETime" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">

                @if (Model.OnCall.Id != 0)
                {
                    <partial name="_EditAndBackBtn" model="@Model.OnCall.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackBtn" />
                }

            </div>

        </form>
    </div>
</div>

@section Scripts{
    <style>
        .cus-border {
            border: 2px solid #004481;
        }

        hr {
            border-color: black;
        }

        label {
            font-weight: 500;
        }

        input[type=datetime] {
            border-color: #0094ff;
        }
    </style>
}