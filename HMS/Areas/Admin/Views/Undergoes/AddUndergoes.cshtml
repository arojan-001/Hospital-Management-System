@model HMS.Models.ViewModels.AdminViewModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New Undergoes";

    if (Model.Undergoes.Id != 0)
    {
        ViewData["Title"] = "Update Undergoes";
    }
    else
    {
        ViewData["Title"] = "Add New Undergoes";
    }
}

<div class="container bg-white">
    <div class="col-6 m-0 m-auto bg-light rounded cus-border">
        <form method="post" asp-action="AddUndergoes" class="col-12">

            @if (Model.Undergoes.Id != 0)
            {
                <input type="hidden" asp-for="@Model.Undergoes.Id" />
                title = "Update Undergoes";
            }

            <div class="row justify-content-center">
                <h3 class="pt-2">@title</h3>
            </div>
            <hr class="w-75" />

            <div class="row form-group">
                <div class="col-4">
                    <label>Patient Name</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(i => i.Undergoes.PatientId, Model.PatientsList, "Select Patient Name", new { @class = "form-control", @style = "border-color:#0094ff" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label>Doctor Name</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(i => i.Undergoes.DoctorId, Model.DoctorsList, "Select Doctor Name", new { @class = "form-control", @style = "border-color:#0094ff" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label>Nurse Name</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(i => i.Undergoes.NurseId, Model.NursesList, "Select Nurse Name", new { @class = "form-control", @style = "border-color:#0094ff" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label>Procedure</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(i => i.Undergoes.ProcedureId, Model.ProceduresList, "Select Procedure", new { @class = "form-control", @style = "border-color:#0094ff" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label>Room Usage</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(i => i.Undergoes.UsageId, Model.UsageList, "Select Room", new { @class = "form-control", @style = "border-color:#0094ff" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="@Model.Undergoes.Date"></label>
                </div>
                <div class="col-8">
                    <input type="datetime-local" asp-for="@Model.Undergoes.Date" class="form-control" />
                    <span asp-validation-for="@Model.Undergoes.Date" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">

                @if (Model.Undergoes.Id != 0)
                {
                    <partial name="_EditAndBackBtn" model="@Model.Undergoes.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackBtn" />
                }

            </div>

        </form>
    </div>
</div>

@section Scripts{
    <style>
        .cus-border {
            border: 2px solid #004481;
        }

        hr {
            border-color: black;
        }

        label {
            font-weight: 500;
        }
    </style>
}