@model HMS.Models.ViewModels.AdminViewModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New Medication";

    if (Model.Medication.Id != 0)
    {
        ViewData["Title"] = "Update Medication";
    }
    else
    {
        ViewData["Title"] = "Add New Medication";
    }
}

<div class="container">
    <div class="col-6 m-0 m-auto bg-light rounded cus-border">
        <form method="post" asp-action="AddMedication" class="col-12">

            @if (Model.Medication.Id != 0)
            {
                <input type="hidden" asp-for="@Model.Medication.Id" />
                title = "Update Medication";
            }

            <div class="row justify-content-center">
                <h3 class="pt-2">@title</h3>
            </div>
            <hr class="w-75" />

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Medication.Name"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Medication.Name" class="form-control" />
                    <span asp-validation-for="@Model.Medication.Id" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Medication.Brand"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Medication.Brand" class="form-control" />
                    <span asp-validation-for="@Model.Medication.Brand" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Medication.Description"></label>
                </div>
                <div class="col-9">
                    <textarea asp-for="@Model.Medication.Description" class="form-control" style="height:300px;"></textarea>
                    <span asp-validation-for="@Model.Medication.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">

                @if (Model.Medication.Id != 0)
                {
                    <partial name="_EditAndBackBtn" model="@Model.Medication.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackBtn" />
                }

            </div>

        </form>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/n94ifuzvl80pchikopiwgz2esrw8n28dwcywvpejlqrregfp/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'edit format'
        })
    </script>
    <style>
        .cus-border {
            border: 2px solid #004481;
        }

        hr {
            border-color: black;
        }

        label {
            font-weight: 500;
        }

        textarea {
            border-color: #0094ff;
        }

        input[type=text] {
            border-color: #0094ff;
        }
    </style>
}