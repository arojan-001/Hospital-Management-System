@model HMS.Models.ViewModels.AdminViewModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Add New Room";

    if(Model.Room.Id != 0)
    {
        ViewData["Title"] = "Update Room";
    }
    else
    {
        ViewData["Title"] = "Add New Room";
    }
}

<div class="container">
    <div class="col-6 m-0 m-auto cus-border rounded bg-light">
        <form method="post" asp-action="AddRoom" class="col-12">

            @if (Model.Room.Id != 0)
            {
                <input type="hidden" asp-for="@Model.Room.Id" />
                title = "Update Room";
            }

            <div class="row justify-content-center">
                <h3 class="pt-2">@title</h3>
            </div>
            <hr class="w-75" />

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Room.FNo"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Room.FNo" class="form-control" />
                    <span asp-validation-for="@Model.Room.FNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Room.RNo"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Room.RNo" class="form-control" />
                    <span asp-validation-for="@Model.Room.RNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Room.RType"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Room.RType" class="form-control" />
                    <span asp-validation-for="@Model.Room.RType" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <label asp-for="@Model.Room.Availability"></label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.Room.Availability" class="form-control" />
                    <span asp-validation-for="@Model.Room.Availability" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">

                @if(Model.Room.Id != 0)
                {
                    <partial name="_EditAndBackBtn" model="@Model.Room.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackBtn" />
                }

            </div>

        </form>
    </div>
</div>

@section Scripts{ 
    <style>
        .cus-border {
            border: 2px solid #004481;
        }

        hr {
            border-color: black;
        }

        label {
            font-weight: 500;
        }

        input[type=number] {
            border-color: #0094ff;
        }

        input[type=text] {
            border-color: #0094ff;
        }

        input[type=checkbox] {
            border-color: #0094ff;
        }
    </style>
}